<UserControl x:Class="Melville.Pdf.ComparingReader.MainWindow.Renderers.TabMultiRendererView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Melville.Pdf.ComparingReader.MainWindow.Renderers"
             xmlns:viewFrames="clr-namespace:Melville.MVVM.Wpf.ViewFrames;assembly=Melville.MVVM.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <TabControl ItemsSource="{Binding Renderers}">
        <TabControl.ItemContainerStyle>
            <Style TargetType="TabItem">
                <Setter Property="Header" Value="{Binding DisplayName}"></Setter>
            </Style>
        </TabControl.ItemContainerStyle>
        <TabControl.ContentTemplate>
            <DataTemplate DataType="{x:Type local:IRenderer}">
                <viewFrames:ViewFrame Content="{Binding RenderTarget}"/> 
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>
</UserControl>
